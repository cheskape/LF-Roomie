<p id="notice"><%= notice %></p>
<%= link_to 'Home', root_path %>

<br>
<h2>Your Preferences</h2>

<table>
  <thead>
    <tr>
      <th>Preference</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_preferences.each do |preference| %>
      <tr>
        <td><%= preference.prefer %></td>
        <td><%= link_to 'Show', preference %> |</td>
        <td><%= link_to 'Edit', edit_preference_path(preference) %> |</td>
        <td><%= link_to 'Remove', destroy_preferences_path(preference)%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<h2>All Preferences</h2>
<table>
  <thead>
    <tr>
      <th>Preference</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @preferences.each do |preference| %>
      <tr>
        <td><%= preference.prefer %></td>
        <td><%= link_to 'Show', preference %></td>
        <td><%= link_to 'Delete', delete_preferences_path(preference)%></td>
      </tr>
    <% end %>
  </tbody>
</table>



<br>

